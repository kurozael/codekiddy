ifndef config
  config=debug
endif
export config

PROJECTS := codekiddy box2d luabind

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

codekiddy: box2d luabind
	@echo "==== Building codekiddy ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f codekiddy.make

box2d: 
	@echo "==== Building box2d ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f box2d.make

luabind: 
	@echo "==== Building luabind ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f luabind.make

clean:
	@${MAKE} --no-print-directory -C . -f codekiddy.make clean
	@${MAKE} --no-print-directory -C . -f box2d.make clean
	@${MAKE} --no-print-directory -C . -f luabind.make clean

